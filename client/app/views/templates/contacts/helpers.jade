mixin formatName(name)
    if name.prefix
        = name.prefix
        | 
    = name.first
    | 
    if name.middle
        = name.middle
        | 
    b= name.given
    if name.suffix
        | 
        = name.suffix


mixin formatPoint(point)
    i.type
        = point.type
        | &nbsp;
    span= point.value


mixin formatJob(title, org, dept)
    if title
        = title
    if title && org
        |  - 
    if org
        = org
    if org && dept || title && dept
        |  
    if dept
        | (#{dept})
