button
[role=button]
    padding          em(8px) em(16px)
    background-color blue
    border           1px solid blue
    border-radius    2px
    font-size        em(14px)
    color            white
    text-transform   uppercase
    text-decoration  none

    &:hover
        background-color darken(blue, 20%)
        border-color     darken(blue, 20%)

    &.outline
        background-color transparent
        color            blue

        &:hover
            background-color blue
            color            white

    &.secondary
        background-color grey-04
        border-color     grey-04

        &:hover
            background-color grey-05
            border-color     grey-05

        &.outline
            background-color transparent
            color            grey-05

            &:hover
                background-color grey-05
                color            white
