.drawer
    padded           10px, 20px

    background-color grey-01
    border-right     1px solid grey-03

    @media (max-width: (360/16)rem)
        display none


    [class^=tool-]
        vertically-spaced 10px


    .tools
        height 100%
        display flex
        flex-direction column

        .tool-labels
            flex 1

        legend
        button
            display    block
            width      100%

            text-align left

            font-weight bold


    .tool-labels
        vertically-spaced()

        legend
            color          grey-05
            font-size      14px
            text-transform uppercase

        label
            display           flex
            align-items       center
            vertically-spaced .5em
            text-transform    capitalize

        input
            hide()
