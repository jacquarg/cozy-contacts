.card
    @extend $dialog

    [role=contentinfo]
        display flex

        background-color white
        border-radius 4px


    .avatar
        font-size 32px
        avatar    128px
        spaced()


    .initials
        background-color grey-02
        color            white


    .data
        flex    1
        padded 30px, 10px

        .block
            reset()
            vertically-spaced 10px

            li
                bottom-spaced 4px

                &:last-child
                    bottom-spaced 0

        .group
            display flex

        .type
            width          8em

            font-size      em(13px)
            color          grey-05
            font-style     normal
            text-transform uppercase

        .value
            reset()
            flex 1


        .block[data-type] ul:not(:empty)
        .block [data-type]:first-child ul:not(:empty)
        &.edit .block
            top-padded 10px
            border-top 1px solid grey-02


    // edition mode
    .edit
        input
            background-color transparent

        .group
            vertically-spaced 6px

            &:hover
                .value
                    background-color grey-01

            .value:focus
                background-color grey-01

            &:not(:hover) button
                hide()

        .type
            vertically-padded 6px

            &:focus
                color grey-08

        .value
            horizontally-padded 8px
            border-radius       em(2px)

        textarea.value
            padded 8px


    aside
        padding em(30px)

        @media (max-width: (360/16)rem)
            display none

        li > *
            display block
            margin-bottom em(10px)

        button
            // allow the button type to make 100% of the container (aside)
            width 100%

            text-align left

        .fa
            margin-right em(10px)
