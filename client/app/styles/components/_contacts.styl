[role=list]
    [role=columnheader]
        padding-left 1.3em


    [role=rowgroup]
        padding 0 1em


    [role=listitem]
        display flex
        align-items center
        padding .3em 0

        & > label
            @media (max-width: (360/16)rem)
                display none


    [role=gridcell]
        flex 3
        white-space nowrap
        margin 0 .5em

        &.name
            flex 4
            display flex
            align-items center

            @media (max-width: (360/16)rem)
                margin-left 0

        &.phones
            flex 2

        &.phones
        &.emails
            @media (max-width: (360/16)rem)
                display none


    .fa-caret-down
        margin 0 .3em


    .type
        hide()
