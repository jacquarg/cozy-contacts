avatar(size)
    @extend $content-center

    width         em(size)
    height        em(size)
    right-spaced  .5em
    border-radius 50%


.empty
    hide()


[role=application]
    @extend $app-2panes-toolbar


[role=contentinfo]
    dl
    dd
        reset()


// TODO: move those defs to cozy-ui
[aria-haspopup=true]
    position relative

    > :nth-child(1)
        cursor: pointer

    > :nth-child(2)
        z-index 1
        position absolute
        padding em(8px) 0
        width 100%

        button
        span
            display block
            width 100%
            padding 0.25em 1em

    &[data-position*=top] > :nth-child(2)
        bottom 100%
    &[data-position*=bottom] > :nth-child(2)
        top 100%
    &[data-position*=left] > :nth-child(2)
        left 0
    &[data-position*=right] > :nth-child(2)
        right 0

    &[aria-expanded=false]
        > :nth-child(2)
            hide()
