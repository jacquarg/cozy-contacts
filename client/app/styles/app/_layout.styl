[role=application]
    display  flex
    width    100vw
    height   100vh
    overflow hidden

    main
        flex           1
        display        flex
        flex-direction column

    [role=contentinfo]
        flex       1
        overflow-y auto

        dl
            margin 0

        div > dl > dt
            padding-left 2em

        dd
            margin 0

        ul
            margin  0
            padding 0 1em

            li
                display     flex
                align-items center
                padding     0.2em 0

                & > p
                & > dl
                    flex 1

        .initials // TO REMOVE !!!
            display         flex
            align-items     center
            justify-content center
            width           40px
            height          40px
            margin          0 1em


.empty
    hide()
